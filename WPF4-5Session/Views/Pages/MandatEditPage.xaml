<Page x:Class="WPF4_5Session.Views.Pages.MandatEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF4_5Session.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MandatEditPage">

    <Grid>
        <StackPanel Width="300" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Изменение данных:"></TextBlock>
            <ComboBox ItemsSource="{Binding DataAddPermissions}" SelectedItem="{Binding User.DataAddPermission}" DisplayMemberPath="Title" ></ComboBox>

            <TextBlock Text="Просмотр данных:"></TextBlock>
            <ComboBox ItemsSource="{Binding DataViewPermissions}" SelectedItem="{Binding User.DataViewPermission}" DisplayMemberPath="Title" ></ComboBox>

            <TextBlock Text="Формирование отчетов:"></TextBlock>
            <ComboBox ItemsSource="{Binding ReportPermissions}" SelectedItem="{Binding User.ReportPermission}" DisplayMemberPath="Title" ></ComboBox>

            <Button Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="0,10,0,0"></Button>

        </StackPanel>
    </Grid>
</Page>
