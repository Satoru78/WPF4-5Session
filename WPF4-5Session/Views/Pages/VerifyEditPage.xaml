<Page x:Class="WPF4_5Session.Views.Pages.VerifyEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF4_5Session.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VerifyEditPage">

    <Grid>
        <StackPanel Width="300" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Верификация:"></TextBlock>
            <ComboBox ItemsSource="{Binding Verifies}" SelectedItem="{Binding User.Verify}" DisplayMemberPath="Title" ></ComboBox>

            <Button Name="btnSave" Content="Сохранить" Click="btnSave_Click" Margin="0,10,0,0"></Button>
        </StackPanel>
    </Grid>
</Page>
